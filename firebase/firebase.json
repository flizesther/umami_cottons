{
    "hosting": {
        "public": "public",
        "rewrites": [{
            "source": "/api/**",
            "function": "api"
          },
          {
            "source": "!/api/**",
            "function": "nuxtssr"
        }],
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ]
    },
    "functions": {
        "source": "functions"
    }
}